@model Test_Manager_Alpha.Models.Project
<link rel="stylesheet" type="text/css" href="~/CSS/Shared/_Layout.css" />
<style>
    .field-validation-error {
        color: #b94a48;
    }

    input.input-validation-error {
        border: 1px solid #b94a48;
    }

    input.valid {
        border: 1px solid #16a085;
    }

    .validation-summary-errors {
        color: #b94a48;
    }
</style>

@{
    ViewBag.Title = "Test Manager: New Project";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h2>Adding a project</h2>

<form method="post" asp-action="create" asp-controller="home">
    <p>
        <label>Project Name:</label><br />
        <input type="text" asp-for="Name" />
        <span asp-validation-for="Name" />
    </p>
    <p>
        <label>Project Description:</label><br />
        <textarea asp-for="Description" rows="10" cols="50"></textarea>
    </p>
    <p>
        <input class="adding" type="submit" value="Add" />
    </p>
</form>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>